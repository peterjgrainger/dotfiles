{
  "files.autoSave": "afterDelay",
  "git.autofetch": true,
  "editor.fontFamily": "Fira Code",
  "editor.fontLigatures": true,
  "vscode_custom_css.imports": [
      "file://Users/peter.grainger/code/personal/fonts/font-style.css"
  ],
  "solargraph.diagnostics": true,
  "editor.formatOnSaveTimeout": 5000,
  "ruby.format": "rubocop",
  "workbench.startupEditor": "newUntitledFile",
  "window.zoomLevel": 1,
  "editor.tabSize": 2,
  "sourcegraph.url": "https://sourcegraph.dev-sageone.com",
  "workbench.list.keyboardNavigation": "filter",
  "zenMode.hideTabs": false,
  "ruby.lint": {
      "reek": true,
      "rubocop": true,
      "ruby": true, //Runs ruby -wc
      "fasterer": true,
      "debride": true,
      "ruby-lint": true
  },
  "files.insertFinalNewline": true,
  "solargraph.autoformat": true,
  // Time (ms) to wait after keypress before running enabled linters. Ensures
  // linters are only run when typing has finished and not for every keypress
  "ruby.lintDebounceTime": 500,
  "liveshare.features": "experimental",
  "liveshare.featureSet": "insiders",
  "liveshare.increasedGuestLimit": true,
  "liveshare.languages.allowGuestCommandControl": true,
  "terminal.integrated.rendererType": "dom",
  "workbench.iconTheme": "storyscript-theme",
  "editor.renderWhitespace": "all"
}
